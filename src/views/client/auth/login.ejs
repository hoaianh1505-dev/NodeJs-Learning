<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body style="background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); min-height: 100vh;">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center" style="min-height:100vh; align-items:center;">
                        <div class="col-lg-7">
                            <div class="card border-0 rounded-4" style="box-shadow: 0 10px 40px rgba(0,0,0,0.3);">
                                <div class="card-header bg-white border-0 pt-5 pb-0">
                                    <h3 class="text-center fw-bold my-2" style="color: #2c5364; font-size: 28px;">Login
                                    </h3>
                                </div>
                                <div class="card-body px-5 pb-4 pt-4">
                                    <% if (typeof messages !=='undefined' && messages.length> 0) { %>
                                        <div id="login-messages" data-messages="<%= JSON.stringify(messages) %>"
                                            style="display: none;"></div>
                                        <% } %>
                                            <form autocomplete="off" method="POST" action="/login">
                                                <!-- Fake fields to trick browsers that ignore autocomplete="off" -->
                                                <input style="display:none" type="text" name="fakeusernameremembered" />
                                                <input style="display:none" type="password"
                                                    name="fakepasswordremembered" />

                                                <div class="form-floating mb-4">
                                                    <input class="form-control rounded-3" id="loginEmail" type="email"
                                                        name="username" autocomplete="none"
                                                        placeholder="name@example.com" readonly
                                                        onfocus="this.removeAttribute('readonly');"
                                                        style="height: 56px;" />
                                                    <label for="loginEmail">Email address</label>
                                                </div>
                                                <div class="form-floating mb-4">
                                                    <input class="form-control rounded-3" id="loginPassword"
                                                        type="password" name="password" autocomplete="new-password"
                                                        placeholder="Password" readonly
                                                        onfocus="this.removeAttribute('readonly');"
                                                        style="height: 56px;" />
                                                    <label for="loginPassword">Password</label>
                                                </div>
                                                <button type="submit"
                                                    class="btn w-100 py-3 rounded-3 text-white fw-bold"
                                                    style="background: linear-gradient(135deg, #0f2027, #2c5364); font-size: 16px;">Login</button>
                                            </form>
                                </div>
                                <div class="card-footer bg-white text-center py-4 border-0">
                                    <div class="small"><a href="/register">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const messageDiv = document.getElementById('login-messages');
            if (messageDiv) {
                const messages = JSON.parse(messageDiv.getAttribute('data-messages'));
                if (messages && messages.length > 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Đăng nhập thất bại',
                        text: messages[messages.length - 1], // Lấy tin nhắn cuối cùng (thường là lỗi gần nhất)
                        confirmButtonText: 'Thử lại',
                        confirmButtonColor: '#2c5364'
                    });
                }
            }
        });
    </script>
</body>

</html>