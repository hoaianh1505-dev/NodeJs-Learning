<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - HaziShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body style="background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%); min-height: 100vh;">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center" style="min-height:100vh; align-items:center;">
                        <div class="col-lg-8">
                            <div class="card border-0 rounded-4" style="box-shadow: 0 10px 40px rgba(0,0,0,0.3);">
                                <div class="card-header bg-white border-0 pt-5 pb-0">
                                    <h3 class="text-center fw-bold my-2" style="color: #2c5364; font-size: 28px;">Create
                                        Account</h3>
                                </div>
                                <div class="card-body px-5 pb-4 pt-4">
                                    <form action="/register" method="POST" autocomplete="off">
                                        <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                                            <div id="registration-errors" data-errors="<%= JSON.stringify(errors) %>"
                                                style="display: none;"></div>
                                            <div class="alert alert-danger pb-0">
                                                <ul class="list-unstyled">
                                                    <% errors.forEach(function(error) { %>
                                                        <li><i class="fas fa-exclamation-circle me-2"></i>
                                                            <%= error %>
                                                        </li>
                                                        <% }) %>
                                                </ul>
                                            </div>
                                            <% } %>
                                                <div class="form-floating mb-4">
                                                    <input class="form-control rounded-3" type="text" name="fullname"
                                                        value="<%= typeof oldData !== 'undefined' ? oldData.fullname : '' %>"
                                                        placeholder="Enter your full name" style="height: 56px;" />
                                                    <label>Full Name</label>
                                                </div>
                                                <div class="form-floating mb-4">
                                                    <input class="form-control rounded-3" type="email" name="username"
                                                        value="<%= typeof oldData !== 'undefined' ? oldData.username : '' %>"
                                                        placeholder="Enter your username" style="height: 56px;" />
                                                    <label>Email address</label>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            <input class="form-control rounded-3" type="password"
                                                                name="password" autocomplete="new-password"
                                                                placeholder="Create a password" style="height: 56px;" />
                                                            <label>Password</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            <input class="form-control rounded-3" type="password"
                                                                name="passwordConfirm" autocomplete="new-password"
                                                                placeholder="Confirm password" style="height: 56px;" />
                                                            <label>Confirm Password</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mt-4 mb-0">
                                                    <button type="submit"
                                                        class="btn w-100 py-3 rounded-3 text-white fw-bold"
                                                        style="background: linear-gradient(135deg, #0f2027, #2c5364); font-size: 16px;">Create
                                                        Account</button>
                                                </div>
                                    </form>
                                </div>
                                <div class="card-footer bg-white text-center py-4 border-0">
                                    <div class="small"><a href="/login">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-white-50">Copyright &copy; HaziShop 2024</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const errorDiv = document.getElementById('registration-errors');
            if (errorDiv) {
                const errors = JSON.parse(errorDiv.getAttribute('data-errors'));
                if (errors && errors.length > 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Đăng ký thất bại',
                        html: errors.map(err => `<div>${err}</div>`).join(''),
                        confirmButtonText: 'Đóng',
                        confirmButtonColor: '#2c5364'
                    });
                }
            }
        });
    </script>
</body>

</html>